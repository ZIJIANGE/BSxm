
<link href="~/lib/layui-v2.5.5/layui/css/layui.css" rel="stylesheet" />
<link href="~/lib/font-awesome-4.7.0/css/font-awesome.css" rel="stylesheet" />
<link href="~/lib/bootstrap-3.3.7/css/bootstrap.min.css" rel="stylesheet" />
@model  WebUI.Models.Users

<form class="layui-form" action="" style="width:95%;margin-left:2%;margin-top:2%;">
    <fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;">
        <legend>个人信息</legend>
    </fieldset>
    <input type="hidden" id="ID" name="ID" value="@Model.ID" />

    <a class="btn  btn-warning" data-type="reload" id="btnEdit">修改信息</a>
    <table class="table table-bordered" style="width: 98%; text-align: center; margin-top: 10px;">
        <tr>
            <td class="active" style="text-align: right;  width:8%; font-weight: bold;"> 姓名 </td>
            <td style="text-align: left;  width:12%; ">@Model.UsersName</td>
            <td class="active" style="text-align: right;  width:8%;   font-weight: bold;">账号 </td>
            <td style="text-align: left;  width:12%;">@Model.UsersNo</td>
        </tr>
        <tr>
            <td class="active" style="text-align: right;   width:8%;  font-weight: bold;"> 角色 </td>
            <td style="text-align: left; width:12%; ">@Model.Types</td>
            <td class="active" style="text-align: right;  width:8%;   font-weight: bold;">性别 </td>
            <td style="text-align: left; width:12%; ">@Model.Sex</td>
        </tr>
        <tr>
            <td class="active" style="text-align: right;  font-weight: bold;"> 出生日期 </td>
            <td style="text-align: left; ">@Model.Birthday</td>
            <td class="active" style="text-align: right;  font-weight: bold;">所属班级 </td>
            <td style="text-align: left; ">@Model.ClassInfo</td>
        </tr>
        <tr>
            <td class="active" style="text-align: right;  font-weight: bold;"> 联系电话 </td>
            <td style="text-align: left; ">@Model.Tel</td>
            <td class="active" style="text-align: right;  font-weight: bold;">地址 </td>
            <td style="text-align: left; ">@Model.Address</td>
        </tr>

        <tr>
            <td class="active" style="text-align: right;  font-weight: bold;"> 学历层次 </td>
            <td style="text-align: left; ">@Model.XL</td>
            <td class="active" style="text-align: right;  font-weight: bold;">职称 </td>
            <td style="text-align: left; ">@Model.ZC</td>
        </tr>
        <tr>
            <td class="active" style="text-align: right;  font-weight: bold;"> 任职科目 </td>
            <td colspan="3" style="text-align: left; ">@Model.RZKM</td>

        </tr>
        <tr>

            <td class="active" style="text-align: right;  font-weight: bold;">照片:</td>
            <td colspan="3" style="text-align: left; "><img alt="image" class="img-circle" src="@Model.Img" width="100" height="100" /> </td>

        </tr>
    </table>










</form>

<script src="~/lib/js/jquery-3.3.1.min.js"></script>
<script src="~/lib/layui-v2.5.5/layui/layui.js"></script>
<script src="~/lib/layui-v2.5.5/layui/lay/modules/laypage.js"></script>
<script src="~/lib/js/layerHelper.js"></script>

<script>
    layui.use(['jquery', 'laydate', 'util', 'layer', 'layedit', 'table'], function () {
        var layer = layui.layer, table = layui.table, util = layui.util;
        $("#btnEdit").click(function () {
            OpenPape("/UserInfo/Students/UserInfoEdit?ID=" + $("#ID").val(), "个人信息修改", "98%", "98%")
        })
    });

</script>
